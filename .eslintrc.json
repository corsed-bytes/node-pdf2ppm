{
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "testHelper": true,
        "app": true,
        "CLIENT": true,
        "hashHelper": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": "warn",
        "global-require": "off",
        "indent": [
            "warn",
            4,
            {
                "MemberExpression": 1,
                "SwitchCase": 1,
                "VariableDeclarator": 2
            }
        ],
        "linebreak-style": ["off", "unix"],
        "quotes": ["warn", "single"],
        "semi": ["warn", "always"],
        "no-unused-vars": [
            "error",
            {
                "vars": "all",
                "args": "none",
                "ignoreRestSiblings": false
            }
        ]
    }
}
